<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="fragment"
            type="com.uos.smsmsm.fragment.customersupport.FAQAnswerFragment" />
        <variable
            name="question"
            type="String" />
        <variable
            name="answer"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_faq_answer_header"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/faq_answer_close_imgbtn"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="8dp"
                android:onClick="@{fragment.close}"
                android:src="@drawable/ic_baseline_close_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAQ"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/faq_answer_q_mark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="24dp"
            android:text="Q."
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/layout_faq_answer_header"/>
        <TextView
            android:id="@+id/faq_answer_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="8dp"
            android:text="@{question}"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/faq_answer_q_mark"/>
        <TextView
            android:id="@+id/faq_answer_a_mark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="24dp"
            android:text="A."
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/faq_answer_question"/>

        <TextView
            android:id="@+id/faq_answer_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="8dp"
            android:text="@{answer}"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/faq_answer_a_mark"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/more_question_send_mail"
            app:layout_constraintTop_toBottomOf="@id/faq_answer_answer"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>