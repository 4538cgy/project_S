<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.setting.VersionInfoActivity">

    <data>
        <variable
            name="activityversioninfo"
            type="com.uos.smsmsm.activity.setting.VersionInfoActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageButton
            android:id="@+id/activity_version_info_imagebutton_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="12dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_close_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            app:layout_constraintTop_toTopOf="@+id/activity_version_info_imagebutton_close"
            app:layout_constraintBottom_toBottomOf="@+id/activity_version_info_imagebutton_close"
            app:layout_constraintLeft_toRightOf="@+id/activity_version_info_imagebutton_close"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"
            android:text="버전 정보"
            />


        <TextView
            android:id="@+id/activity_version_info_textview_current_version_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 버전"
            android:textSize="22dp"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@+id/activity_version_info_imagebutton_close"
            />

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/activity_version_info_textview_current_version_title"
            app:layout_constraintLeft_toLeftOf="@+id/activity_version_info_textview_current_version_title"
            android:layout_marginTop="12dp"
            android:id="@+id/activity_version_info_textview_current_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0.0"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/activity_version_info_recent_version_title"
            app:layout_constraintTop_toBottomOf="@+id/activity_version_info_textview_current_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최신 버전"
            android:textSize="22dp"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/activity_version_info_textview_recent_version"
            app:layout_constraintTop_toBottomOf="@+id/activity_version_info_recent_version_title"
            app:layout_constraintLeft_toLeftOf="@+id/activity_version_info_recent_version_title"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Version 1.0.2"
            />

        <Button
            android:id="@+id/activity_version_info_button_update_version"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="최신 버전 업데이트 하러가기"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="24dp"
            android:background="@drawable/background_round_yellow_24dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>