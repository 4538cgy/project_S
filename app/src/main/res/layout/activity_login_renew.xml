<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.login.RenewLoginActivity">

    <data>
        <variable
            name="activity_login_renew"
            type="com.uos.smsmsm.activity.login.RenewLoginActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_login_renew_const_top_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
            <ImageButton
                android:id="@+id/activity_login_renew_imagebutton_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_baseline_close_24"
                android:background="@android:color/transparent"
                />

            <TextView
                app:layout_constraintTop_toTopOf="@+id/activity_login_renew_imagebutton"
                app:layout_constraintBottom_toBottomOf="@+id/activity_login_renew_imagebutton"
                app:layout_constraintLeft_toRightOf="@+id/activity_login_renew_imagebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인"
                android:layout_marginLeft="12dp"
                android:textColor="@color/colorBlack"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button

            android:id="@+id/activity_login_renew_button_google"
            app:layout_constraintTop_toBottomOf="@+id/activity_login_renew_const_top_bar"
            android:layout_marginTop="200dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="구글 아이디로 로그인"
            android:textColor="@color/colorWhite"
            android:layout_marginHorizontal="12dp"
            android:background="@color/colorGoogleSignIn"
            />

        <Button
            android:id="@+id/activity_login_renew_button_phone_login"
            app:layout_constraintTop_toBottomOf="@+id/activity_login_renew_button_google"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="32dp"
            android:text="핸드폰 번호로 로그인"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            />


        <TextView
            android:id="@+id/activity_login_renew_textview_go_to_signup"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원 가입 페이지로 이동"
            android:textSize="14dp"
            android:textColor="@color/colorBlack"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>