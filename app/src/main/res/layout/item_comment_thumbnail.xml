<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="itemcomment"
            type="com.uos.smsmsm.data.ContentDTO.Comment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        >

        <ImageView
            android:id="@+id/item_comment_thumbnail_imageview_profile_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            />

        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/item_comment_thumbnail_textview_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="12dp"
            app:layout_constraintLeft_toRightOf="@+id/item_comment_thumbnail_imageview_profile_image"
            app:layout_constraintTop_toTopOf="@+id/item_comment_thumbnail_imageview_profile_image"
            app:layout_constraintBottom_toBottomOf="@+id/item_comment_thumbnail_imageview_profile_image"
            />

        <TextView
            android:id="@+id/item_comment_thumbnail_textview_explain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="12dp"
            app:layout_constraintLeft_toRightOf="@+id/item_comment_thumbnail_textview_nickname"
            app:layout_constraintTop_toTopOf="@+id/item_comment_thumbnail_textview_nickname"
            app:layout_constraintRight_toRightOf="parent"
             android:gravity="left"
            />

        <ImageButton
            android:id="@+id/item_comment_thumbnail_imagebutton_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_baseline_favorite_border_12"
            android:background="@android:color/transparent"
            android:layout_marginRight="8dp"
            />

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/item_comment_thumbnail_textview_explain"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/item_comment_thumbnail_textview_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="시간"
            />
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@+id/item_comment_thumbnail_textview_timestamp"
            app:layout_constraintBottom_toBottomOf="@+id/item_comment_thumbnail_textview_timestamp"
            app:layout_constraintLeft_toRightOf="@+id/item_comment_thumbnail_textview_timestamp"
            android:text="답글 달기"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>